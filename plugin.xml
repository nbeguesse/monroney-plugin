<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="monroney-plugin"
    version="1.0.0">
    <name>Monroney Plugin</name>

    <!-- android -->
    <platform name="android">
      <source-file src="android/res/raw/scannerlicense.jet" target-dir="res/raw"/>
        <config-file target="res/xml/config.xml" parent="/*">
            <icon density="ldpi" src="www/res/icon/36.png" />
            <icon density="mdpi" src="www/res/icon/48.png" />
            <icon density="hdpi" src="www/res/icon/72.png" />
            <icon density="xhdpi" src="www/res/icon/96.png" />
            <icon density="xxhdpi" src="www/res/icon/144.png" />
            <icon density="xxxhdpi" src="www/res/icon/192.png" />
        </config-file>
    </platform>

    <!-- ios -->
    <platform name="ios">
        <source-file src="ios/res/raw/scannerlicense.plist"/>
        <config-file target="config.xml" parent="/*">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/res/icon/180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/res/icon/60.png" width="60" height="60" />
        <icon src="www/res/icon/120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/res/icon/76.png" width="76" height="76" />
        <icon src="www/res/icon/152.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="www/res/icon/40.png" width="40" height="40" />
        <icon src="www/res/icon/80.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="www/res/icon/57.png" width="57" height="57" />
        <icon src="www/res/icon/114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/res/icon/72.png" width="72" height="72" />
        <icon src="www/res/icon/144.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/res/icon/29.png" width="29" height="29" />
        <icon src="www/res/icon/58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/res/icon/50.png" width="50" height="50" />
        <icon src="www/res/icon/100.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="www/res/icon/167.png" width="167" height="167" />
        </config-file>
    </platform>
</plugin>
